<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamChat.Views.LoginPage" BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="8"
                         VerticalOptions="Center">
                <Image Source="XamChat.png" />
                <Label Text="Welcome to Xam Chat - Your efficient chat solution" 
                       HorizontalOptions="CenterAndExpand" 
                       HorizontalTextAlignment="Center"
                       FontSize="Medium" />
                <Entry x:Name="Username"
                       Placeholder="Username"
                       Text="{Binding Username}"
                       HorizontalOptions="FillAndExpand"
                       ReturnCommand="{Binding LoginCommand}"
                       Keyboard="Email" />
                <Button Text="Login"
                        HorizontalOptions="Center"
                        Command="{Binding LoginCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource Icons}"
                        CornerRadius="10"
                        WidthRequest="{Binding Source={x:Reference Username}, Path=Width}"
                        Padding="16,8" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>